<%= render 'shared/page_title', title: 'Log In' %>

<!--  As logins is not a model backed class, cannot use form_for.
Instead form tags must be used, and the route specified. -->
<div class="row">
  <div class="well col-md-6 col-md-offset-3">
    <%= form_tag '/login' do %>
      
      <%= label_tag :staff_email %>
      <%= text_field_tag :staff_email %>
      
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      
      <%= submit_tag 'Log In', class: 'btn btn-success' %>

    <% end %>
  </div>
</div>