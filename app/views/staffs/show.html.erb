<%= render "shared/page_title", title: @staff.staff_name + ", " + @staff.staff_email %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <!-- Include Gravitar / avatar / photo if wanted -->
  </div> 
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <h3><em>Computers:</em></h3>
    <%= will_paginate @computers %>
  </div>
</div>

<% @computers.each do |computer| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 well">
      <h4><%= link_to computer.serial_no, computer_path(computer) %></h4>
      <p><%= computer.manufacturer %> <%= computer.computer_type %> donated by <%= computer.donor %></p>
      <p>
        <span class="quiet"><small>Created <%= time_ago_in_words(computer.created_at) %> ago, </small></span>
        <span class="quiet"><small>updated <%= time_ago_in_words(computer.updated_at) %> ago</small></span>
      </p>
    </div>
  </div>
<% end %>