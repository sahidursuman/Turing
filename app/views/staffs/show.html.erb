<%= render "shared/page_title", title: @staff.staff_name + ", " + @staff.staff_email %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <% if logged_in? and current_user.admin? %>
      <%= link_to "Edit Staff Member", edit_staff_path, class: "btn btn-success" %>
      <%= link_to "Delete Staff Member", @staff, method: :delete, data: {confirm: "Delete this staff member's details?" }, class: "btn btn-danger" %>
    <% end %>
    <!-- Include Gravitar / avatar / photo if wanted -->
  </div> 
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <h3><em>Wiped Computers:</em></h3>
    <%= will_paginate @wipes %>
  </div>
</div>

<% @wipes.each do |wipe| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 well">
      <h4><%= link_to "Turing Track No #" + wipe.computer.turingtrack, computer_path(wipe.computer) %></h4>
      <p><%= wipe.computer.manufacturer + " " + wipe.computer.computer_type +  
      " donated by " + wipe.computer.donor.donor_name %></p>
      <p>
        <span class="quiet"><small>Created <%= time_ago_in_words(wipe.computer.created_at) %> ago, </small></span>
        <span class="quiet"><small>updated <%= time_ago_in_words(wipe.computer.updated_at) %> ago</small></span>
      </p>
    </div>
  </div>
<% end %>