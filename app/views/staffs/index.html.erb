<%= render "shared/page_title", title: "Staff Index" %>

<ul class="nav nav-tabs">
  <li>
    <%= link_to "Computers", computers_path %>
  </li>
  <li class="active">
    <%= link_to "Staff", staffs_path %>
  </li>
</ul>

<div class="row">
  <div class="col-md-6 col-md-offset-3 center">
    <%= will_paginate %>
  </div>
</div>

<br><br>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Staff ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Department/s</th>
          <th>Created At</th>
          <th>Updated At</th>
          <th>Admin</th>
         </tr>
      </thead>
      <tbody>
        <% @staffs.each do |staff| %>
          <tr>
            <td><%= "#" + staff.id.to_s %></td>
            <td><%= link_to staff.staff_name, staff_path(staff) %></td>
            <td><%= staff.staff_email %></td>
            <td><%= render staff.types %></td>
            <td><%= staff.created_at.strftime("%d/%m/%y") %></td>
            <td><%= staff.updated_at.strftime("%d/%m/%y") %></td>
            <td><%= staff.admin %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>